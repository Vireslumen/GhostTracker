<ContentPage
    x:Class="GhostTracker.Views.ImagePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GhostTracker.Views;assembly=GhostTracker"
    xmlns:models="clr-namespace:GhostTracker.Models;assembly=GhostTracker"
    BackgroundColor="Black">
    <!--Элемент интерактивного изображения-->
    <views:InteractiveImageView Source="{Binding ImageFilePath}" x:DataType="models:ImageWithDescription" />
</ContentPage>