<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhasmophobiaCompanion.Views.GhostDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    BackgroundColor="#791AE5"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>

        <!--  Основной контейнер страницы  -->
        <Grid>
            <!--  Первый элемент  -->
            <BoxView
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                BackgroundColor="Green" />
            <StackLayout
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                HeightRequest="260">
                <StackLayout.Padding>
                    0,0,0,10
                </StackLayout.Padding>
                <yummy:PancakeView
                    Padding="10,10,10,10"
                    BackgroundColor="White"
                    CornerRadius="16"
                    HeightRequest="260">
                    <yummy:PancakeView.Shadow>
                        <yummy:DropShadow Offset="0,3" Color="#000000" />
                    </yummy:PancakeView.Shadow>
                    <yummy:PancakeView.Margin>
                        <Thickness>
                            10,3,10,10
                        </Thickness>
                    </yummy:PancakeView.Margin>
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="1" Color="Color.Default" />
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Image HeightRequest="150" Source="{Binding ImageUrl}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Title}"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand" />
                        <FlexLayout
                            AlignItems="Stretch"
                            BindableLayout.ItemsSource="{Binding Clues}"
                            JustifyContent="Center">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout HorizontalOptions="End">
                                        <yummy:PancakeView
                                            Padding="3"
                                            BackgroundColor="White"
                                            CornerRadius="15"
                                            HeightRequest="30"
                                            WidthRequest="30">
                                            <yummy:PancakeView.Margin>
                                                <Thickness>
                                                    5,5,5,5
                                                </Thickness>
                                            </yummy:PancakeView.Margin>
                                            <yummy:PancakeView.Shadow>
                                                <yummy:DropShadow
                                                    BlurRadius="3"
                                                    Offset="0,5"
                                                    Color="Black" />
                                            </yummy:PancakeView.Shadow>
                                            <Image
                                                Aspect="AspectFit"
                                                HorizontalOptions="Center"
                                                Source="{Binding Source}" />
                                        </yummy:PancakeView>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                            <FlexLayout.Direction>Row</FlexLayout.Direction>
                        </FlexLayout>

                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>

            <!--  Второй элемент  -->
            <BoxView
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="4"
                Grid.ColumnSpan="5"
                BackgroundColor="White" />
            <Label
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="5"
                FontAttributes="Italic"
                FontSize="16"
                HorizontalOptions="Center"
                Text="{Binding Description}"
                VerticalOptions="Center" />
            <!--  Третий элемент  -->
            <BoxView
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="9"
                BackgroundColor="Red" />
            <StackLayout
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="9">
                <StackLayout x:Name="StrengthStack">
                    <Frame
                        x:Name="ExpandingItem1"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Strength[0]}" VerticalOptions="CenterAndExpand" />
                            <Image
                                x:Name="ExpandIcon1"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="expand_icon.png"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </Frame>
                    <!--  Содержимое, которое будет отображаться при раскрытии  -->
                    <StackLayout x:Name="ExpandedContent1" IsVisible="False">
                        <Label Text="{Binding Strength[1]}" />
                    </StackLayout>
                </StackLayout>
                <StackLayout x:Name="AbilityStack">

                    <Frame
                        x:Name="ExpandingItem2"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Abilities[0]}" VerticalOptions="CenterAndExpand" />
                            <Image
                                x:Name="ExpandIcon2"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="expand_icon.png"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </Frame>
                    <!--  Содержимое, которое будет отображаться при раскрытии  -->
                    <StackLayout x:Name="ExpandedContent2" IsVisible="False">
                        <Label Text="{Binding Abilities[1]}" />
                    </StackLayout>
                    <!--  Создаем элемент, который состоит из текста и иконки раскрытия  -->
                </StackLayout>
                <StackLayout x:Name="WeaknessesStack">
                    <Frame
                        x:Name="ExpandingItem3"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Weaknesses[0]}" VerticalOptions="CenterAndExpand" />
                            <Image
                                x:Name="ExpandIcon3"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="expand_icon.png"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </Frame>
                    <!--  Содержимое, которое будет отображаться при раскрытии  -->
                    <StackLayout x:Name="ExpandedContent3" IsVisible="False">
                        <Label Text="{Binding Weaknesses[1]}" />
                    </StackLayout>
                    <!--  Создаем элемент, который состоит из текста и иконки раскрытия  -->
                </StackLayout>
                <StackLayout x:Name="SanityHuntStack">

                    <Frame
                        x:Name="ExpandingItem4"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding SanityHunt[0]}" VerticalOptions="CenterAndExpand" />
                            <Image
                                x:Name="ExpandIcon4"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="expand_icon.png"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </Frame>
                    <!--  Содержимое, которое будет отображаться при раскрытии  -->
                    <StackLayout x:Name="ExpandedContent4" IsVisible="False">
                        <Label Text="{Binding SanityHunt[1]}" />
                    </StackLayout>
                    <!--  Создаем элемент, который состоит из текста и иконки раскрытия  -->
                </StackLayout>
                <StackLayout x:Name="SpeedStack">
                    <Frame
                        x:Name="ExpandingItem5"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Speed[0]}" VerticalOptions="CenterAndExpand" />
                            <Image
                                x:Name="ExpandIcon5"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="expand_icon.png"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </Frame>
                    <!--  Содержимое, которое будет отображаться при раскрытии  -->
                    <StackLayout x:Name="ExpandedContent5" IsVisible="False">
                        <Label Text="{Binding Speed[1]}" />
                    </StackLayout>
                </StackLayout>
                <StackLayout>
                    <Label
                        FontAttributes="Italic"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="{Binding Identification}"
                        VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
        </Grid>

    </ScrollView>
</ContentPage>
