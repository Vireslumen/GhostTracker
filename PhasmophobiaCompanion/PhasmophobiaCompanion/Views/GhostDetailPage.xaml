<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="PhasmophobiaCompanion.Views.GhostDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="GhostDetailPageName"
    BackgroundColor="#791AE5"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid>
            <BoxView
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                BackgroundColor="Green" />
            <StackLayout
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                HeightRequest="260">
                <StackLayout.Padding>
                    0,0,0,10
                </StackLayout.Padding>
                <yummy:PancakeView
                    Padding="10,10,10,10"
                    BackgroundColor="White"
                    CornerRadius="16"
                    HeightRequest="260">
                    <yummy:PancakeView.Shadow>
                        <yummy:DropShadow Offset="0,3" Color="#000000" />
                    </yummy:PancakeView.Shadow>
                    <yummy:PancakeView.Margin>
                        <Thickness>
                            10,3,10,10
                        </Thickness>
                    </yummy:PancakeView.Margin>
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="1" Color="Color.Default" />
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <!--  Изображение призрака  -->
                        <Image HeightRequest="150" Source="{Binding ImageFilePath}" />
                        <!--  Название призркак  -->
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Title}"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand" />
                        <!--  Список улик призрака  -->
                        <FlexLayout
                            AlignItems="Stretch"
                            BindableLayout.ItemsSource="{Binding Clues}"
                            JustifyContent="Center">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout HorizontalOptions="End">
                                        <yummy:PancakeView
                                            Padding="3"
                                            BackgroundColor="White"
                                            CornerRadius="15"
                                            HeightRequest="30"
                                            WidthRequest="30">
                                            <yummy:PancakeView.Margin>
                                                <Thickness>
                                                    5,5,5,5
                                                </Thickness>
                                            </yummy:PancakeView.Margin>
                                            <yummy:PancakeView.Shadow>
                                                <yummy:DropShadow
                                                    BlurRadius="3"
                                                    Offset="0,5"
                                                    Color="Black" />
                                            </yummy:PancakeView.Shadow>
                                            <Image
                                                Aspect="AspectFit"
                                                HorizontalOptions="Center"
                                                Source="{Binding IconFilePath}" />
                                        </yummy:PancakeView>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                            <FlexLayout.Direction>Row</FlexLayout.Direction>
                        </FlexLayout>

                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
            <BoxView
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="5"
                BackgroundColor="White" />
            <!--  Описание призрака  -->
            <Label
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="5"
                FontAttributes="Italic"
                FontSize="16"
                HorizontalOptions="Center"
                Text="{Binding Description}"
                VerticalOptions="Center" />
            <BoxView
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="9"
                BackgroundColor="Red" />
            <StackLayout
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="9">
                <!--  Список раскрывающихся элементов, содержащих текст в них  -->
                <CollectionView ItemsSource="{Binding UnfoldingItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame
                                    Padding="10"
                                    BackgroundColor="White"
                                    CornerRadius="5">
                                    <StackLayout Orientation="Vertical">
                                        <!--  Название раскрывающегося элемента  -->
                                        <Label Text="{Binding Title}" VerticalOptions="CenterAndExpand" />
                                        <StackLayout Orientation="Horizontal">
                                            <!--  Краткое описание раскрывающегося элемента  -->
                                            <Label Text="{Binding Header}" VerticalOptions="CenterAndExpand" />
                                            <!--  Иконка раскрытия или скрытия тела элемента  -->
                                            <Image
                                                HeightRequest="20"
                                                HorizontalOptions="EndAndExpand"
                                                Source="{Binding Icon}"
                                                VerticalOptions="CenterAndExpand" />
                                        </StackLayout>
                                        <!--  Раскрывающийся текст  -->
                                        <Label IsVisible="{Binding IsExpanded}" Text="{Binding Body}" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnItemTapped" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>
        </Grid>

    </ScrollView>
</ContentPage>