<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhasmophobiaCompanion.Views.ClueDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pinch="clr-namespace:Xamarin.Forms.PinchZoomImage;assembly=Xamarin.Forms.PinchZoomImage"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="ClueDetailPageName">
    <ScrollView>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Image
                    HeightRequest="30"
                    HorizontalOptions="EndAndExpand"
                    Source="{Binding IconFilePath}" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalOptions="StartAndExpand"
                    Text="{Binding Title}" />
            </StackLayout>

            <Grid>
                <yummy:PancakeView
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    Padding="10,10,10,10"
                    BackgroundColor="Yellow"
                    CornerRadius="16">
                    <yummy:PancakeView.Shadow>
                        <yummy:DropShadow Offset="0,3" Color="#000000" />
                    </yummy:PancakeView.Shadow>
                    <yummy:PancakeView.Margin>
                        <Thickness>
                            10,3,10,10
                        </Thickness>
                    </yummy:PancakeView.Margin>
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="1" Color="Color.Default" />
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Image HeightRequest="150" Source="{Binding ImageUrl}" />
                    </StackLayout>

                </yummy:PancakeView>
                <yummy:PancakeView
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Padding="10,10,10,10"
                    BackgroundColor="Green"
                    CornerRadius="16">
                    <yummy:PancakeView.Shadow>
                        <yummy:DropShadow Offset="0,3" Color="#000000" />
                    </yummy:PancakeView.Shadow>
                    <yummy:PancakeView.Margin>
                        <Thickness>
                            10,3,10,10
                        </Thickness>
                    </yummy:PancakeView.Margin>
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="1" Color="Color.Default" />
                    </yummy:PancakeView.Border>
                    <ScrollView>
                        <Label
                            FontAttributes="Italic"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="{Binding Description}"
                            VerticalOptions="Center" />
                    </ScrollView>
                </yummy:PancakeView>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

            </Grid>
            <StackLayout BindableLayout.ItemsSource="{Binding ExpandFieldsWithImages}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame
                                Padding="10"
                                BackgroundColor="White"
                                CornerRadius="5">
                                <StackLayout BackgroundColor="Aqua" Orientation="Vertical">
                                    <Label Text="{Binding Title}" VerticalOptions="CenterAndExpand" />
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Header}" VerticalOptions="CenterAndExpand" />
                                        <Image
                                            HeightRequest="20"
                                            HorizontalOptions="EndAndExpand"
                                            Source="{Binding Icon}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <StackLayout IsVisible="{Binding IsExpanded}" Orientation="Vertical">
                                        <Label Text="{Binding Body}" />
                                        <StackLayout BindableLayout.ItemsSource="{Binding ImageWithDescriptions}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <StackLayout Orientation="Vertical">
                                                        <pinch:PinchZoom>
                                                            <pinch:PinchZoom.Content>
                                                                <Image
                                                                    BackgroundColor="Green"
                                                                    Source="{Binding ImageSource}"
                                                                    WidthRequest="500" />
                                                            </pinch:PinchZoom.Content>
                                                        </pinch:PinchZoom>
                                                        <Label Text="{Binding Description}" VerticalOptions="Center" />
                                                    </StackLayout>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnItemTapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <StackLayout BindableLayout.ItemsSource="{Binding UnfoldingItems}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame
                                Padding="10"
                                BackgroundColor="White"
                                CornerRadius="5">
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Title}" VerticalOptions="CenterAndExpand" />
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Header}" VerticalOptions="CenterAndExpand" />
                                        <Image
                                            HeightRequest="20"
                                            HorizontalOptions="EndAndExpand"
                                            Source="{Binding Icon}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Label IsVisible="{Binding IsExpanded}" Text="{Binding Body}" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnItemTapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <yummy:PancakeView Padding="5,5,5,5" CornerRadius="10">
                <yummy:PancakeView.Margin>
                    <Thickness>
                        10,3,10,10
                    </Thickness>
                </yummy:PancakeView.Margin>
                <yummy:PancakeView.Border>
                    <yummy:Border Thickness="1" Color="Color.Default" />
                </yummy:PancakeView.Border>
                <CollectionView ItemsSource="{Binding Ghosts}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackLayout
                                    Grid.Column="0"
                                    Orientation="Vertical"
                                    VerticalOptions="CenterAndExpand">
                                    <Label FontAttributes="Bold" Text="{Binding Title}" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnGhostTapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                                <FlexLayout
                                    Grid.Column="1"
                                    BindableLayout.ItemsSource="{Binding Clues}"
                                    Direction="Column"
                                    JustifyContent="Start"
                                    Wrap="Wrap">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout
                                                Margin="0"
                                                Orientation="Vertical"
                                                VerticalOptions="FillAndExpand">
                                                <Image
                                                    HeightRequest="30"
                                                    Source="{Binding IconFilePath}"
                                                    WidthRequest="30" />
                                                <Label
                                                    HorizontalOptions="CenterAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    LineBreakMode="WordWrap"
                                                    Text="{Binding Title}"
                                                    VerticalOptions="Center" />
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnClueTapped" />
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </FlexLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </yummy:PancakeView>
        </StackLayout>
    </ScrollView>
</ContentPage>