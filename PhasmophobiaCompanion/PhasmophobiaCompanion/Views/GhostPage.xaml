<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="PhasmophobiaCompanion.Views.GhostPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Padding="0,20,0,0"
    BackgroundColor="#791AE5"
    NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <!--  Строка поиска и фильтрации призраков  -->
        <yummy:PancakeView
            Margin="20,0,20,20"
            Padding="10,0,0,0"
            BackgroundColor="White"
            CornerRadius="25"
            HeightRequest="50"
            VerticalOptions="EndAndExpand">

            <StackLayout Orientation="Horizontal">
                <!--  Строка поиска призраков  -->
                <Image
                    HeightRequest="25"
                    HorizontalOptions="Start"
                    Source="search"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="25" />
                <Entry
                    x:Name="searchEntry"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    Placeholder="{Binding GhostCommon.Search}"
                    Text="{Binding SearchQuery, Mode=TwoWay}">
                    <Entry.Behaviors>
                        <behaviors:EventToCommandBehavior Command="{Binding SearchCommand}" />
                    </Entry.Behaviors>
                </Entry>
                <!--  Кнопка фильтрации призраков  -->
                <Image
                    BackgroundColor="{Binding FilterColor}"
                    HeightRequest="25"
                    HorizontalOptions="End"
                    Source="filter_icon"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="25">
                    <Image.Margin>
                        0,0,10,0
                    </Image.Margin>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FilterCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </yummy:PancakeView>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout>

                <yummy:PancakeView
                    Margin="0,30,0,0"
                    Padding="0,0,0,0"
                    BackgroundColor="White"
                    CornerRadius="40,40,0,0"
                    VerticalOptions="FillAndExpand">
                    <StackLayout>
                        <!--  Заголовок страницы  -->
                        <Label
                            Margin="10"
                            FontSize="20"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding GhostCommon.GhostsTitle}"
                            VerticalOptions="Center" />
                        <!--  Список призраков  -->
                        <CollectionView
                            x:Name="collectionView"
                            ItemsSource="{Binding Ghosts}"
                            SelectionMode="Single">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout HeightRequest="260">
                                        <StackLayout.Padding>
                                            0,0,0,10
                                        </StackLayout.Padding>
                                        <yummy:PancakeView
                                            Padding="10,10,10,10"
                                            BackgroundColor="White"
                                            CornerRadius="16"
                                            HeightRequest="260">
                                            <yummy:PancakeView.Shadow>
                                                <yummy:DropShadow Offset="0,3" Color="#000000" />
                                            </yummy:PancakeView.Shadow>
                                            <yummy:PancakeView.Margin>
                                                <Thickness>
                                                    10,3,10,10
                                                </Thickness>
                                            </yummy:PancakeView.Margin>
                                            <yummy:PancakeView.Border>
                                                <yummy:Border Thickness="1" Color="Color.Default" />
                                            </yummy:PancakeView.Border>
                                            <yummy:PancakeView.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Path=BindingContext.GhostSelectedCommand, Source={x:Reference Name=collectionView}}" CommandParameter="{Binding .}" />
                                            </yummy:PancakeView.GestureRecognizers>
                                            <StackLayout>
                                                <!--  Изображение призрака  -->
                                                <Image HeightRequest="150" Source="{Binding ImageFilePath}" />
                                                <!--  Название призрака  -->
                                                <Label
                                                    FontSize="20"
                                                    HorizontalOptions="CenterAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding Title}"
                                                    TextColor="Black"
                                                    VerticalOptions="CenterAndExpand" />
                                                <!--  Список улик призрака  -->
                                                <FlexLayout
                                                    AlignItems="Stretch"
                                                    BindableLayout.ItemsSource="{Binding Clues}"
                                                    JustifyContent="Center">
                                                    <BindableLayout.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackLayout HorizontalOptions="End">
                                                                <yummy:PancakeView
                                                                    Padding="3"
                                                                    BackgroundColor="White"
                                                                    CornerRadius="15"
                                                                    HeightRequest="30"
                                                                    WidthRequest="30">
                                                                    <yummy:PancakeView.Margin>
                                                                        <Thickness>
                                                                            5,5,5,5
                                                                        </Thickness>
                                                                    </yummy:PancakeView.Margin>
                                                                    <yummy:PancakeView.Shadow>
                                                                        <yummy:DropShadow
                                                                            BlurRadius="3"
                                                                            Offset="0,5"
                                                                            Color="Black" />
                                                                    </yummy:PancakeView.Shadow>
                                                                    <Image
                                                                        Aspect="AspectFit"
                                                                        HorizontalOptions="Center"
                                                                        Source="{Binding IconFilePath}" />
                                                                </yummy:PancakeView>
                                                            </StackLayout>
                                                        </DataTemplate>
                                                    </BindableLayout.ItemTemplate>
                                                    <FlexLayout.Direction>Row</FlexLayout.Direction>
                                                </FlexLayout>

                                            </StackLayout>
                                        </yummy:PancakeView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.Margin>
                                <Thickness>5</Thickness>
                            </CollectionView.Margin>
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="10"
                                    Orientation="Vertical"
                                    Span="2"
                                    VerticalItemSpacing="0" />
                            </CollectionView.ItemsLayout>
                        </CollectionView>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>