<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="PhasmophobiaCompanion.Views.EquipmentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="EquipmentPageName"
    BackgroundColor="Black"
    NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <!--  Заголовок страницы  -->
        <Label
            Margin="5"
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            Text="{Binding EquipmentCommon.EquipmentsTitle}"
            TextColor="White"
            VerticalOptions="Center" />
        <!--  Строка поиска и фильтрации снаряжения  -->
        <yummy:PancakeView
            Margin="5,0,5,5"
            CornerRadius="25"
            HeightRequest="50"
            VerticalOptions="EndAndExpand">
            <StackLayout BackgroundColor="White" Orientation="Horizontal">
                <!--  Строка поиска снаряжения  -->
                <SearchBar
                    HorizontalOptions="StartAndExpand"
                    Placeholder="{Binding EquipmentCommon.Search}"
                    Text="{Binding SearchText, Mode=TwoWay}" />

                <!--  Кнопка фильтрации снаряжения  -->
                <yummy:PancakeView
                    Padding="3"
                    BackgroundColor="{Binding FilterColor}"
                    CornerRadius="28"
                    HeightRequest="28"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="28">
                    <Image
                        HeightRequest="25"
                        Source="filter_icon"
                        WidthRequest="25" />
                    <yummy:PancakeView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FilterCommand}" />
                    </yummy:PancakeView.GestureRecognizers>
                </yummy:PancakeView>
            </StackLayout>
        </yummy:PancakeView>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout>
                <yummy:PancakeView
                    BackgroundColor="White"
                    CornerRadius="40,40,0,0"
                    VerticalOptions="FillAndExpand">
                    <!--  Список снаряжения  -->
                    <CollectionView
                        x:Name="collectionView"
                        ItemsSource="{Binding Equipments}"
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <StackLayout.Padding>
                                        0,0,0,10
                                    </StackLayout.Padding>
                                    <yummy:PancakeView
                                        Padding="10,10,10,10"
                                        BackgroundColor="White"
                                        CornerRadius="16">
                                        <yummy:PancakeView.Shadow>
                                            <yummy:DropShadow />
                                        </yummy:PancakeView.Shadow>
                                        <yummy:PancakeView.Margin>
                                            <Thickness>
                                                10,3,10,10
                                            </Thickness>
                                        </yummy:PancakeView.Margin>
                                        <yummy:PancakeView.Border>
                                            <yummy:Border Thickness="5" Color="White" />
                                        </yummy:PancakeView.Border>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <AbsoluteLayout Grid.Row="0">
                                                <!--  Изображения снаряжения  -->
                                                <Image
                                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                                    AbsoluteLayout.LayoutFlags="All"
                                                    HeightRequest="150"
                                                    Source="{Binding ImageFilePath}">
                                                    <Image.Margin>
                                                        0,20,0,20
                                                    </Image.Margin>
                                                </Image>
                                                <!--  Уровень разблокировки снаряжения  -->
                                                <StackLayout
                                                    AbsoluteLayout.LayoutBounds="0.01,0.01,-1,-1"
                                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                                    HorizontalOptions="Center" Orientation="Horizontal">
                                                    <Image HeightRequest="18" Source="unlock" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="14"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding UnlockLevel}"
                                                        TextColor="Black"
                                                        VerticalOptions="Center" />
                                                </StackLayout>
                                                <!--  Тир снаряжения  -->
                                                <Label
                                                    AbsoluteLayout.LayoutBounds="0.99,0.01,-1,-1"
                                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    HorizontalOptions="Center"
                                                    TextColor="Black"
                                                    VerticalOptions="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span
                                                                Text="{Binding Source={x:Reference EquipmentPageName}, Path=BindingContext.EquipmentCommon.Tier}" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding Tier}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <!--  Цена снаряжения  -->
                                                <StackLayout
                                                    AbsoluteLayout.LayoutBounds="0.99,0.99,-1,-1"
                                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                                    HorizontalOptions="Center" Orientation="Horizontal" Spacing="2">
                                                    <Image HeightRequest="18" Source="dollar" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="14"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Cost}"
                                                        TextColor="Black"
                                                        VerticalOptions="Center" />
                                                </StackLayout>
                                                <!--  Цена разблокировки снаряжения  -->
                                                <StackLayout
                                                    AbsoluteLayout.LayoutBounds="0.01,0.99,-1,-1"
                                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                                    HorizontalOptions="Center" Orientation="Horizontal">
                                                    <Image HeightRequest="18" Source="unlockdollar" />
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="14"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding UnlockCost}"
                                                        TextColor="Black"
                                                        VerticalOptions="Center" />
                                                </StackLayout>
                                            </AbsoluteLayout>
                                            <!--  Название снаряжения  -->
                                            <Label
                                                Grid.Row="1"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="CenterAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding Title}"
                                                TextColor="Black"
                                                VerticalOptions="EndAndExpand" />

                                            <BoxView
                                                Grid.Row="2"
                                                BackgroundColor="Gainsboro"
                                                VerticalOptions="FillAndExpand" />
                                            <!--  TODO: Сделай чтобы это было нормально  -->
                                            <StackLayout Grid.Row="3"
                                                         BindableLayout.ItemsSource="{Binding OtherEquipmentStats}">
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <Label
                                                            Padding="10,0,10,0"
                                                            FontSize="12"
                                                            HorizontalOptions="CenterAndExpand"
                                                            HorizontalTextAlignment="Center"
                                                            Text="{Binding ShortStat}"
                                                            TextColor="Black" />
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </StackLayout>
                                        </Grid>
                                    </yummy:PancakeView>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Path=BindingContext.EquipmentSelectedCommand, Source={x:Reference Name=collectionView}}"
                                            CommandParameter="{Binding .}" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                Text="{Binding EquipmentCommon.EmptyView}"
                                VerticalOptions="CenterAndExpand"
                                VerticalTextAlignment="Center" />
                        </CollectionView.EmptyView>
                        <CollectionView.Margin>
                            <Thickness>5</Thickness>
                        </CollectionView.Margin>
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                Orientation="Vertical"
                                Span="2"
                                VerticalItemSpacing="0" />
                        </CollectionView.ItemsLayout>
                    </CollectionView>
                </yummy:PancakeView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>