<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhasmophobiaCompanion.Views.EquipmentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Padding="0,20,0,0"
    BackgroundColor="#791AE5"
    NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <yummy:PancakeView
            Margin="20,0,20,20"
            Padding="10,0,0,0"
            BackgroundColor="White"
            CornerRadius="25"
            HeightRequest="50"
            VerticalOptions="EndAndExpand">
            <StackLayout Orientation="Horizontal">
                <Image
                    HeightRequest="25"
                    HorizontalOptions="Start"
                    Source="search"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="25" />
                <Entry
                    x:Name="searchEntry"
                    BackgroundColor="White"
                    Completed="OnSearchCompleted"
                    HorizontalOptions="FillAndExpand"
                    Placeholder="Search Equipment"
                    Text="{Binding SearchQuery, Mode=TwoWay}" />
                <Image
                    HeightRequest="25"
                    HorizontalOptions="End"
                    Source="filter_icon"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="25">
                    <Image.Margin>
                        0,0,10,0
                    </Image.Margin>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="FilterTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </yummy:PancakeView>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout>

                <yummy:PancakeView
                    Margin="0,30,0,0"
                    Padding="0,0,0,0"
                    BackgroundColor="White"
                    CornerRadius="40,40,0,0"
                    VerticalOptions="FillAndExpand">
                    <StackLayout>
                        <Label
                            Margin="10"
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="Equipments"
                            TextColor="#791AE5"
                            VerticalOptions="Center" />

                        <CollectionView ItemsSource="{Binding Equipments}" SelectionMode="Single">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <StackLayout.Padding>
                                            0,0,0,10
                                        </StackLayout.Padding>
                                        <yummy:PancakeView
                                            Padding="10,10,10,10"
                                            BackgroundColor="White"
                                            CornerRadius="16">
                                            <yummy:PancakeView.Shadow>
                                                <yummy:DropShadow Offset="0,3" Color="#000000" />
                                            </yummy:PancakeView.Shadow>
                                            <yummy:PancakeView.Margin>
                                                <Thickness>
                                                    10,3,10,10
                                                </Thickness>
                                            </yummy:PancakeView.Margin>
                                            <yummy:PancakeView.Border>
                                                <yummy:Border Thickness="1" Color="Color.Default" />
                                            </yummy:PancakeView.Border>
                                            <yummy:PancakeView.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnEquipmentTapped" />
                                            </yummy:PancakeView.GestureRecognizers>
                                            <StackLayout>
                                                <AbsoluteLayout>
                                                    <Image
                                                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                                                        AbsoluteLayout.LayoutFlags="All"
                                                        HeightRequest="150"
                                                        Source="{Binding ImageUrl}">
                                                        <Image.Margin>
                                                            0,20,0,20
                                                        </Image.Margin>
                                                    </Image>
                                                    <yummy:PancakeView
                                                        AbsoluteLayout.LayoutBounds="0.01,0.01,-1,-1"
                                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                                        BackgroundColor="White"
                                                        CornerRadius="30"
                                                        HeightRequest="30"
                                                        WidthRequest="50">
                                                        <yummy:PancakeView.Shadow>
                                                            <yummy:DropShadow
                                                                BlurRadius="3"
                                                                Offset="0,5"
                                                                Color="Black" />
                                                        </yummy:PancakeView.Shadow>
                                                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                                                            <Image HeightRequest="18" Source="unlock" />
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="13"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding Level}"
                                                                TextColor="Black"
                                                                VerticalOptions="Center" />
                                                        </StackLayout>
                                                    </yummy:PancakeView>
                                                    <yummy:PancakeView
                                                        AbsoluteLayout.LayoutBounds="0.99,0.01,-1,-1"
                                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                                        BackgroundColor="White"
                                                        CornerRadius="30"
                                                        HeightRequest="30"
                                                        WidthRequest="50">
                                                        <yummy:PancakeView.Shadow>
                                                            <yummy:DropShadow
                                                                BlurRadius="3"
                                                                Offset="0,5"
                                                                Color="Black" />
                                                        </yummy:PancakeView.Shadow>
                                                        <Label
                                                            FontAttributes="Bold"
                                                            FontSize="13"
                                                            HorizontalOptions="Center"
                                                            Text="{Binding Tier, StringFormat='Tier {0}'}"
                                                            TextColor="Black"
                                                            VerticalOptions="Center" />
                                                    </yummy:PancakeView>
                                                    <yummy:PancakeView
                                                        AbsoluteLayout.LayoutBounds="0.99,0.99,-1,-1"
                                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                                        BackgroundColor="White"
                                                        CornerRadius="30"
                                                        HeightRequest="30"
                                                        WidthRequest="50">
                                                        <yummy:PancakeView.Shadow>
                                                            <yummy:DropShadow
                                                                BlurRadius="3"
                                                                Offset="0,5"
                                                                Color="Black" />
                                                        </yummy:PancakeView.Shadow>
                                                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                                                            <Image HeightRequest="18" Source="dollar" />
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="13"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding Cost}"
                                                                TextColor="Black"
                                                                VerticalOptions="Center" />
                                                        </StackLayout>
                                                    </yummy:PancakeView>
                                                    <yummy:PancakeView
                                                        AbsoluteLayout.LayoutBounds="0.01,0.99,-1,-1"
                                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                                        BackgroundColor="White"
                                                        CornerRadius="30"
                                                        HeightRequest="30"
                                                        WidthRequest="60">
                                                        <yummy:PancakeView.Shadow>
                                                            <yummy:DropShadow
                                                                BlurRadius="3"
                                                                Offset="0,5"
                                                                Color="Black" />
                                                        </yummy:PancakeView.Shadow>
                                                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                                                            <Image HeightRequest="18" Source="unlockdollar" />
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="13"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding UnlockCost}"
                                                                TextColor="Black"
                                                                VerticalOptions="Center" />
                                                        </StackLayout>
                                                    </yummy:PancakeView>

                                                </AbsoluteLayout>
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="20"
                                                    HorizontalOptions="CenterAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding Title}"
                                                    TextColor="Black"
                                                    VerticalOptions="CenterAndExpand" />
                                                <StackLayout>
                                                    <StackLayout BindableLayout.ItemsSource="{Binding OtherStats}">
                                                        <BindableLayout.ItemTemplate>
                                                            <DataTemplate>
                                                                <Label
                                                                    FontAttributes="Bold"
                                                                    FontSize="13"
                                                                    HorizontalOptions="CenterAndExpand"
                                                                    HorizontalTextAlignment="Center"
                                                                    Text="{Binding}"
                                                                    TextColor="Black"
                                                                    VerticalOptions="CenterAndExpand" />
                                                            </DataTemplate>
                                                        </BindableLayout.ItemTemplate>
                                                    </StackLayout>
                                                </StackLayout>

                                            </StackLayout>
                                        </yummy:PancakeView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.Margin>
                                <Thickness>5</Thickness>
                            </CollectionView.Margin>
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="10"
                                    Orientation="Vertical"
                                    Span="2"
                                    VerticalItemSpacing="0" />
                            </CollectionView.ItemsLayout>
                        </CollectionView>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>