<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:PhasmophobiaCompanion.Behaviors;assembly=PhasmophobiaCompanion"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:effects="http://xamarin.com/schemas/2020/toolkit"
             x:Class="PhasmophobiaCompanion.Views.GhostGuessPage"
             Shell.TabBarIsVisible="False">
    <StackLayout Padding="5">

        <Label
            Margin="5"
            FontFamily="{StaticResource SpecialFont}"
            FontSize="24"
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            Text="{Binding GhostGuessQuestionCommon.PageTitle}"
            TextColor="Black"
            VerticalOptions="Center" />

        <Label FontSize="18" FontFamily="{StaticResource RegularFont}" HorizontalOptions="CenterAndExpand"
               Text="{Binding GhostGuessQuestionCommon.GhostListTitle}" />

        <FlexLayout
            x:Name="ghostFlexLayout"
            Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Start"
            AlignContent="Start" BindableLayout.ItemsSource="{Binding SortedGhosts}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="Transparent" HasShadow="False" Margin="5" WidthRequest="180"
                           HeightRequest="30" Padding="0">
                        <Label HorizontalOptions="CenterAndExpand"
                               FontSize="16" FontFamily="{StaticResource BoldFont}"
                               FontAttributes="Bold">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Ghost.Title}" />
                                    <Span Text=" - " />
                                    <Span Text="{Binding Percent}" />
                                    <Span Text="%" />
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Path=BindingContext.GhostTappedCommand, Source={x:Reference Name=ghostFlexLayout}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
        <ScrollView>
            <StackLayout>
                <CollectionView HeightRequest="340"
                                SelectionChangedCommand="{Binding UpdateGhost}"
                                ItemsSource="{Binding AllClues}"
                                SelectedItems="{Binding SelectedClues, Mode=TwoWay}"
                                SelectionChangedCommandParameter="{Binding .}"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="0,0,0,10" effects:CornerRadiusEffect.CornerRadius="16">
                                <pancakeView:PancakeView
                                    Margin="9,9,9,0"
                                    Padding="5,5,5,5"
                                    BackgroundColor="White"
                                    CornerRadius="16"
                                    HeightRequest="50">
                                    <pancakeView:PancakeView.Shadow>
                                        <pancakeView:DropShadow BlurRadius="5" />
                                    </pancakeView:PancakeView.Shadow>
                                    <pancakeView:PancakeView.Border>
                                        <pancakeView:Border Thickness="1" Color="Color.Default" />
                                    </pancakeView:PancakeView.Border>
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                            Margin="5,0,0,0"
                                            HeightRequest="30"
                                            Source="{Binding IconFilePath}"
                                            WidthRequest="30" />
                                        <Label
                                            Margin="5,0,0,0"
                                            FontSize="16"
                                            Text="{Binding Title}"
                                            VerticalOptions="CenterAndExpand" />

                                    </StackLayout>
                                </pancakeView:PancakeView>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Normal" />
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Gray" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Orientation="Vertical"
                            Span="2" HorizontalItemSpacing="5"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                </CollectionView>
                <StackLayout HeightRequest="100" Orientation="Horizontal">

                    <Button effects:CornerRadiusEffect.CornerRadius="10" BackgroundColor="Black"
                            HorizontalOptions="StartAndExpand" CornerRadius="10" Command="{Binding PressButtonCommand}"
                            Text="{Binding GhostGuessQuestionCommon.TapButtonTitle}" />

                    <Frame CornerRadius="10" BackgroundColor="Black">
                        <StackLayout Spacing="0">

                            <CheckBox Scale="1.5" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand"
                                      IsChecked="{Binding IsSpeedMatter}" />
                            <Label Padding="5" TextColor="White" VerticalOptions="StartAndExpand"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="CenterAndExpand"
                                   Text="{Binding GhostGuessQuestionCommon.CheckBoxTitle}" />
                        </StackLayout>
                    </Frame>

                </StackLayout>
                <Label Text="{Binding AverageFrequency, StringFormat='Ghost Speed: {0:F0} meter/sec'}"
                       FontSize="Medium"
                       HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding GhostGuessQuestionCommon.SpeedTitle}" />
                            <Span Text="{Binding AverageFrequency, StringFormat=' {0:F0} '}" />
                            <Span Text="{Binding GhostGuessQuestionCommon.MeterSecTitle}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <StackLayout x:Name="QuestionsStackLayout"
                             BindableLayout.ItemsSource="{Binding DisplayedQuestions}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout IsVisible="{Binding IsVisible}" HeightRequest="{Binding Visibility}">

                                <Frame Padding="10" Margin="10" CornerRadius="10" 
                                       effects:ShadowEffect.Radius="30" effects:ShadowEffect.Color="Gray"
                                       effects:ShadowEffect.Opacity="0.7">
                                    <StackLayout Padding="5">
                                        <Label FontSize="16" Text="{Binding QuestionText}"
                                               FontAttributes="Bold" />
                                        <Picker
                                            ItemsSource="{Binding Source={x:Reference QuestionsStackLayout}, Path=BindingContext.Items}"
                                            HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
                                            FontFamily="{StaticResource BoldFont}"
                                            Title="{Binding Source={x:Reference QuestionsStackLayout}, Path=BindingContext.GhostGuessQuestionCommon.ChooseAnswer}"
                                            SelectedIndex="{Binding Answer}">
                                            <Picker.Behaviors>
                                                <behaviors:EventToCommandPickerBehavior
                                                    Command="{Binding Source={x:Reference QuestionsStackLayout}, Path=BindingContext.UpdateGhost}" />
                                            </Picker.Behaviors>


                                        </Picker>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </StackLayout>
            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>